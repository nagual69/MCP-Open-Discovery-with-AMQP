{
  "mcpServers": {
    "mcp-open-discovery": {
      "command": "node",
      "args": [
        "mcp_server_multi_transport_sdk.js"
      ],
      "env": {
        "TRANSPORT_MODE": "stdio"
      }
    }
  },
  "nagiosInstances": [
    {
      "id": "nagios1",
      "baseUrl": "http://your-nagios-xi-instance-1",
      "credentialId": "nagios1-creds"
    },
    {
      "id": "nagios2",
      "baseUrl": "http://your-nagios-xi-instance-2",
      "credentialId": "nagios2-creds"
    }
  ]
}
